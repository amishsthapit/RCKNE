@model IEnumerable<Rotaract_Admin.tbl_role>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="page-title">
    <div class="title_left">
        <h2>Roles</h2>
    </div>
    <div class="title_right">
        <div class="col-md-2 col-sm-2 col-xs-12 form-group pull-right top_search">
            <button type="button" class="btn btn-round btn-primary" onclick="@("window.location.href='" + @Url.Action("Create", "Role") + "'");">Add Role</button>
        </div>
    </div>
</div>

<div class="x_content">
    @if (TempData["success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade in" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
            @TempData["success"].ToString()
        </div>
    }


    <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Role</th>
                <th>Action</th>                
            </tr>
        </thead>
        <tbody>

@foreach (var item in Model)
{
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>                
                <td><button type="button" class="btn btn-round btn-success" onclick="@("window.location.href='" + @Url.Action("edit", "Role") +"/" + item.ID + "'");">Edit</button></td>                
            </tr>
}
        </tbody>
    </table>


</div>